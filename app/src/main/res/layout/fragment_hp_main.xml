<?xml version="1.0" encoding="utf-8"?>
<com.fzu.daoyunmobile.CustomUI.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:right_tv_text="添加"
    app:right_tv_visible="true"
    app:title_text="班课"
    app:title_visible="true"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myCreateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="我创建的"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/joinedClassTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="我加入的"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_mycreate"
            android:layout_width="75dp"
            android:layout_height="10px"
            android:layout_marginLeft="51dp"
            android:background="#ff00bfff" />

        <View
            android:id="@+id/view_myjoin"
            android:layout_width="75dp"
            android:layout_height="10px"
            android:layout_marginLeft="104dp"
            android:background="#ff00bfff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/main_header_sourch"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"
            android:src="@mipmap/search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></RelativeLayout>
</com.fzu.daoyunmobile.CustomUI.CustomToolBar>