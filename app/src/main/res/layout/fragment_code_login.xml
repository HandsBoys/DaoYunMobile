<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CodeLoginFragment">

    <LinearLayout
        android:id="@+id/lay_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <include
            android:id="@+id/logo"
            layout="@layout/frameitem_logo"
            android:layout_width="match_parent" />

        <include
            android:id="@+id/input_mobilenum"
            layout="@layout/frameitem_input"
            android:layout_width="match_parent" />

        <include
            android:id="@+id/input_vericode"
            layout="@layout/frameitem_intputvcode"
            android:layout_width="match_parent" />


        <Button
            android:id="@+id/bt_login_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:background="@mipmap/bg_submit"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            tools:targetApi="lollipop" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/qq_login_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:paddingTop="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@mipmap/qq_bg" />

            <TextView
                android:id="@+id/qq_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="QQ登录"
                android:textColor="@color/account_pressed_true"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>