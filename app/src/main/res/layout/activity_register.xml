<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/lay_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="121dp"
            android:layout_height="112dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingTop="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/launcher" />
        <include
            android:id="@+id/input_mobilenum"
            layout="@layout/input_frameitem_layout"
            android:layout_width="match_parent" />

        <include
            android:id="@+id/input_vericode"
            layout="@layout/intputvcode_frameitem_layout"
            android:layout_width="match_parent" />

        <include
            android:id="@+id/input_psd"
            layout="@layout/input_frameitem_layout"
            android:layout_width="match_parent" />
        <include
            android:id="@+id/input_confpsd"
            layout="@layout/input_frameitem_layout"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/bt_register_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:background="@mipmap/bg_submit"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="注  册"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            tools:targetApi="lollipop" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <View
            android:id="@+id/ll_login_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/black_alpha_128" />

    </LinearLayout>

</FrameLayout>