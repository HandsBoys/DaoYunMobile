<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/course_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/course_img_4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text="电子信息"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:text="1班"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/course_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="543216"
                android:textColor="#00BCD4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/crsignIn_Iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@mipmap/list_my_menu" />

            <TextView
                android:id="@+id/crsignIn_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:text="签到"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/crqrCode_Iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/list_my_menu"
                app:srcCompat="@mipmap/qc_code"
                tools:srcCompat="@mipmap/qc_code" />

            <TextView
                android:id="@+id/crqrCode_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="二维码"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>