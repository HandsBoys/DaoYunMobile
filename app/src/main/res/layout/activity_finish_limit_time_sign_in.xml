<?xml version="1.0" encoding="utf-8"?>
<com.fzu.daoyunmobile.CustomUI.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_src="@mipmap/icon_back"
    app:left_btn_visible="true"
    app:right_tv_text="刷新"
    app:right_tv_visible="true"
    app:title_text="结束签到"
    app:title_visible="true"
    tools:context=".Activities.FinishLimitSignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signIn_start_time_Tv"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="开始时间 06月26日 09:02:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signIn_end_time_Tv"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="开始时间 06月26日 09:12:00" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8DDE1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="签到人数" />

            <TextView
                android:id="@+id/signIn_num_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="0人" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8DDE1" />

        <ListView
            android:id="@+id/signedIn_listview"
            android:layout_width="match_parent"
            android:layout_height="450dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8DDE1" />


        <Button
            android:id="@+id/finish_sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:text="结束签到"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

    </LinearLayout>

</com.fzu.daoyunmobile.CustomUI.CustomToolBar>
